<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurveyFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/survey"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_completed"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/instruction"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:src="@drawable/complete"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_completed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_completed"
            android:layout_margin="16dp"
            android:text="@string/survey_done"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_start7"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_completed"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:text="Insomnia"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_start"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_completed"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/bt_start7"
            android:background="@color/colorPrimary"
            android:text="Stress"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_start3"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_start7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:text="Network"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_start6"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_start"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/bt_start3"
            android:background="@color/colorPrimary"
            android:text="Social"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_start8"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_start6"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/bt_start5"
            android:background="@color/colorPrimary"
            android:text="Physical"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_start5"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_start3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:text="Sleep"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_start4"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_start5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimary"
            android:text="Activity"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_start9"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_start8"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/bt_start4"
            android:background="@color/colorPrimary"
            android:text="Harm"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


    </RelativeLayout>


</FrameLayout>